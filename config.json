{
  "timezones": [
    { "name": "Asia/Tokyo", "metric": "metric" },
    { "name": "Asia/Bangkok", "metric": "metric"},
    { "name": "Europe/Vilnius", "metric": "metric" },
    { "name": "Europe/Warsaw", "metric": "metric" },
    { "name": "Europe/London", "metric": "metric" },
    { "name": "America/Argentina/Buenos_Aires", "metric": "metric" },
    { "name": "America/New_York", "metric": "metric" },
    { "name": "America/Chicago", "metric": "metric" },
    { "name": "America/Los_Angeles", "metric": "metric" }
  ],
  "pomodoroDuration": 25,
  "shortBreakDuration": 5,
  "longBreakDuration": 15,
  "breakInterval": 4,
  "timeTemplate": "HH:MM",
  "startPomodoroSound": "assets/start-pomodoro.mp3",
  "startBreakSound": "assets/start-break.mp3",
  "backgroundImage": "url('assets/nightsky.jpg')",
  "colors": {
    "primary": "#ffffff",
    "secondary": "#000000",
    "tertiary": "#3273dc",
    "quaternary": "#23d160",
    "quinary": "#ff3860"
  },
  "discordWebhookUrl": "https://discord.com/api/webhooks/",
  "discordWebhookPayload": {
    "Pomodoro": {
        "embeds": [
            {
            "title": "Pomodoro {sessionCount} started!",
            "description": "Time to focus!",
            "color": 16711680
            }
        ]
    },
    "Short Break": {
        "embeds": [
            {
            "title": "Short break started!",
            "description": "Time to relax!",
            "color": 65280
            }
        ]
    },
    "Long Break": {
        "embeds": [
            {
            "title": "Long break started!",
            "description": "Time to relax!",
            "color": 16776960
            }
        ]
    }
  },
  "rocketChatWebhookUrl": "https://rocketchat.com/api/webhooks/"
}
